<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardUseCompatPadding="true"
    app:contentPadding="12dp"
    app:cardCornerRadius="8dp"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/imgView_pic"
            android:layout_width="100dp"
            android:layout_height="150dp"
            fresco:placeholderImage="@drawable/loading"
            />
        <TextView
            android:id="@+id/tv_hot_name"
            android:lines="1"
            android:text="TextView"
            android:textSize="16sp"
            android:ellipsize="end"
            android:layout_marginTop="3dp"
            android:layout_width="100dp"
            android:layout_below="@+id/imgView_pic"
            android:layout_height="wrap_content"
            />
        <RatingBar
            android:numStars="5"
            android:id="@+id/ratingBar_hot"
            android:isIndicator="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/tv_hot_name"
            style="?android:attr/ratingBarStyleSmall"
            />
        <TextView
            android:id="@+id/tv_hot_rating"
            android:lines="1"
            android:text="10"
            android:textSize="12sp"
            android:ellipsize="end"
            android:layout_marginTop="3.8dp"
            android:layout_marginLeft="4dp"
            android:layout_below="@+id/tv_hot_name"
            android:layout_toRightOf="@+id/ratingBar_hot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</android.support.v7.widget.CardView>